{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run All Linters",
            "type": "shell",
            "command": "echo",
            "args": ["Running all linters..."],
            "dependsOn": [
                "Pylint All",
                "Flake8 All", 
                "Mypy All",
                "Pyright All"
            ],
            "dependsOrder": "parallel",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [],
            "runOptions": {
                "runOn": "default"
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Pylint All",
            "type": "shell",
            "command": "${workspaceFolder}/.venv-tests/bin/pylint",
            "args": [
                "--rcfile=${workspaceFolder}/.pylintrc",
                "--output-format=parseable",
                "."
            ],
            "problemMatcher": {
                "owner": "pylint",
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^(.+):(\\d+):(\\d+): ([A-Z]\\d+): (.+)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "code": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "Flake8 All",
            "type": "shell",
            "command": "${workspaceFolder}/.venv-tests/bin/flake8",
            "args": [
                "--config=${workspaceFolder}/.flake8",
                "--format=%(path)s:%(row)d:%(col)d: %(code)s %(text)s",
                "."
            ],
            "problemMatcher": {
                "owner": "flake8",
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^(.+):(\\d+):(\\d+): ([A-Z]\\d+) (.+)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "code": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "Mypy All",
            "type": "shell",
            "command": "${workspaceFolder}/.venv-tests/bin/mypy",
            "args": [
                "--config-file=${workspaceFolder}/mypy.ini",
                "."
            ],
            "problemMatcher": {
                "owner": "mypy",
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^(.+):(\\d+): (error|warning|note): (.+)$",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "message": 4
                }
            }
        },
        {
            "label": "Pyright All",
            "type": "shell",
            "command": "pyright",
            "problemMatcher": {
                "owner": "pyright",
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^\\s+(.+):(\\d+):(\\d+) - (error|warning|information): (.+)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        }
    ]
}
