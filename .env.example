# --- App ---
ENVIRONMENT=development
APP_NAME=AI Paralegal POC
DEBUG=true
LOG_LEVEL=DEBUG
LOG_FORMAT=json
HOST=0.0.0.0
PORT=8000
RELOAD=true
USE_CELERY=false

# --- Security ---
SECRET_KEY=dev-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
REGISTRATION_ENABLED=true
# Comma-separated list; leave empty to disable invite-only
REGISTRATION_SECRET_KEYS=

# --- OpenAI ---
OPENAI_API_KEY=
OPENAI_ORCHESTRATOR_MODEL=gpt-4o
OPENAI_SUMMARY_MODEL=gpt-5-mini
OPENAI_LLM_MODEL=gpt-5
OPENAI_MAX_RETRIES=3
OPENAI_TIMEOUT=120

# --- Postgres ---
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=paralegal
POSTGRES_USER=paralegal
POSTGRES_PASSWORD=paralegal
POSTGRES_POOL_SIZE=10
POSTGRES_MAX_OVERFLOW=20

# --- Redis ---
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# Leave empty if no password
REDIS_PASSWORD=

# --- Qdrant ---
QDRANT_HOST=localhost
QDRANT_PORT=6333
# Optional: If your Qdrant instance requires it
QDRANT_API_KEY=
QDRANT_COLLECTION_STATUTES=statutes
QDRANT_COLLECTION_RULINGS=sn_rulings
QDRANT_TIMEOUT=60

# --- CORS ---
# Comma-separated origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# --- Storage ---
STORAGE_BASE_DIR=data
STORAGE_UPLOAD_DIR=uploads
STORAGE_CACHE_DIR=cache

