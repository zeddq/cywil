{
  "agentCanUpdateSnapshot": true,
  "install": "bash .cursor/setup-env.sh && bash .cursor/setup-docker.sh",
  "start": "source ~/.venv/bin/activate && export DOCKER_HOST=unix://$HOME/.docker/docker.sock && (docker ps > /dev/null 2>&1 || bash .cursor/setup-docker.sh)",
  "name": "cywil",
  "terminals": [
    {
      "name": "Docker Status",
      "command": "export DOCKER_HOST=unix://$HOME/.docker/docker.sock && docker ps -a"
    },
    {
      "name": "Docker Compose",
      "command": "export DOCKER_HOST=unix://$HOME/.docker/docker.sock && cd .cursor && docker-compose up"
    },
    {
      "name": "API Server",
      "command": "source ~/.venv/bin/activate && python -m uvicorn app.main:app --reload"
    },
    {
      "name": "Celery Worker",
      "command": "source ~/.venv/bin/activate && celery -A app.worker.celery_app worker --loglevel=info"
    }
  ]
}
