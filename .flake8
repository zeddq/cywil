[flake8]
max-line-length = 120
exclude = 
    .git,
    __pycache__,
    .venv,
    .venv-tests,
    venv,
    build,
    dist,
    *.egg-info,
    .tox,
    .mypy_cache,
    .pytest_cache,
    node_modules,
    alembic
extend-ignore = E203, W503, E501
max-complexity = 20
# Scan all Python files recursively
filename = *.py
recursive = True
